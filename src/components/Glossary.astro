---
import { css } from '@/styled-system/css'
import { flex } from '@/styled-system/patterns'
import { truncate } from '@/utils'

const { glossary } = Astro.props
---

<div
  class={flex({
    bg: 'white',
    direction: 'column',
    borderWidth: '1px',
    borderColor: 'gray.200',
    rounded: 'sm',
    p: 4,
    h: 'full',
  })}
>
  <a href=`/glossary/${glossary.id}` class={css({ fontSize: 'lg', mb: 2, fontWeight: 500 })}
    >{glossary.data.title}</a
  >
  <div class={css({ color: 'gray.700' })}>{truncate(glossary.body, 140)}</div>
</div>
