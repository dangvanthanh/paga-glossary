---
import { getCollection } from 'astro:content'
import Layout from '@/layouts/layout.astro'
import { css } from '@/styled-system/css'
import { flex } from '@/styled-system/patterns'
import { tagClasses } from '@/styles'

export async function getStaticPaths() {
	const glossaries = await getCollection('glossary')

	const uniqueTags = [...new Set(glossaries.flatMap((g) => g.data.tags))]

	return uniqueTags.map((tag) => {
		const filteredGlossaries = glossaries.filter((g) =>
			g.data.tags.includes(tag),
		)

		return {
			params: { tag },
			props: { glossaries: filteredGlossaries },
		}
	})
}

const { tag } = Astro.params
const { glossaries } = Astro.props
---

<Layout title={tag}>
  <a
    href="/tags"
    class={css({
      display: 'inline-flex',
      alignItems: 'center',
      color: 'gray.500',
      textDecoration: 'none',
      fontSize: 'sm',
      mb: 5,
      '&:hover': {
        textDecoration: 'underline',
        textUnderlineOffset: '2px',
      },
    })}
  >
    &larr; Back to Tags
  </a>
  <h2 class={css({ fontSize: '3xl', lineHeight: 1, fontWeight: 600, mb: 6 })}>
    {tag}
  </h2>
  <div class={flex({ wrap: 'wrap', gap: 2 })}>
    {
      glossaries.map((glossary) => (
        <a class={tagClasses} href={`/glossary/${glossary.slug}`}>
          {glossary.data.title}
        </a>
      ))
    }
  </div>
</Layout>
